# links follow
Options +FollowSymlinks 
# rewrite Apache activate
RewriteEngine On

# /accueil -> /controllers/home-controller.php
RewriteRule ^accueil$ /controllers/page-controller-home.php [L]

# /signin -> /controllers/home-controller.php
RewriteRule ^inscription$ /controllers/page-controller-signup.php [L]

# /profile -> /controllers/profile-controller.php
RewriteRule ^profile$ /controllers/page-controller-profile.php [L]

# /validate -> /controllers/validate-controller.php
RewriteRule ^validate$ /controllers/page-controller-validate.php [L]